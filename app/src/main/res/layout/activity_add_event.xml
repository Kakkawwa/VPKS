<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Название мероприятия -->
        <EditText
            android:id="@+id/etEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Название мероприятия" />

        <!-- Категория мероприятия -->
        <EditText
            android:id="@+id/etEventCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Категория мероприятия" />

        <!-- Блок выбора коворкинга -->
        <Button
            android:id="@+id/btnSelectCoworking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выбрать коворкинг" />

        <!-- Отображение выбранного коворкинга -->
        <TextView
            android:id="@+id/tvSelectedCoworking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Коворкинг не выбран"
            android:padding="8dp"
            android:textColor="#555555" />

        <!-- Выбор даты (с ограничением: нельзя выбрать прошедшую дату) -->
        <EditText
            android:id="@+id/etEventDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Выберите дату"
            android:focusable="false" />

        <!-- Выбор времени начала -->
        <EditText
            android:id="@+id/etEventStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Начало мероприятия"
            android:focusable="false" />

        <!-- Выбор времени окончания -->
        <EditText
            android:id="@+id/etEventEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Окончание мероприятия"
            android:focusable="false" />

        <!-- Описание мероприятия -->
        <EditText
            android:id="@+id/etEventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Описание мероприятия"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <!-- Кнопка добавления мероприятия -->
        <Button
            android:id="@+id/btnAddEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить мероприятие"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
