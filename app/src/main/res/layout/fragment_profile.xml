<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Кнопка выхода в правом верхнем углу -->
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/btn_star"/>

    <!-- Контейнер с данными пользователя -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:layout_below="@id/imageButton">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:src="@drawable/img" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Имя:"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="none"/>

        <TextView
            android:id="@+id/surnameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Фамилия:"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="none"/>

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Email:"
            android:textSize="18sp"
            android:maxLines="3"
            android:ellipsize="none"/>
    </LinearLayout>

    <!-- Кнопка "Мои коворкинги" -->

    <!-- Новая кнопка "Мои бронирования" -->

    <Button
        android:id="@+id/myCoworkingsButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/myBookingsButton"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        app:backgroundTint="?attr/colorPrimary"
        android:text="Мои коворкинги и мероприятия"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/myBookingsButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/editProfileButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="25dp"
        app:backgroundTint="?attr/colorPrimary"
        android:text="Мои бронирования"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="30dp"
        app:backgroundTint="?attr/colorPrimary"
        android:text="Изменить данные"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/myCoworkingsButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="25dp"
        app:backgroundTint="#df3b57"
        android:text="Удалить аккаунт"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>
